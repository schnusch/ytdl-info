{
	"manifest_version": 2,
	"name":        "youtube-dl info",
	"version":     "0.1",
	"description": "Extract video info with youtube-dl.",

	"permissions": [
		"storage",
		"tabs",
		"<all_urls>"
	],

	"options_ui": {
		"page": "options.xhtml"
	},

	"browser_action": {
		"default_icon":  "youtube-dl.svg",
		"default_title": "youtube-dl info"
	},

	"background": {
		"scripts": ["background.js"]
	}
}
